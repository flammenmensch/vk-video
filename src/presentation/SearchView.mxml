<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:parsley="http://www.spicefactory.org/parsley"
		 xmlns:components="presentation.components.*">
	
	<fx:Declarations>
		<parsley:ContextBuilder>
			<parsley:FlexConfig type="{SearchContext}" />
		</parsley:ContextBuilder>
		
		<parsley:FastInject property="model" type="{SearchPM}" />
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import application.configuration.SearchContext;
			
			[Bindable]
			public var model:SearchPM;
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout gap="10" />
	</s:layout>
	
	<s:TextInput width="100%" 
				 prompt="Поиск..."
				 text="@{this.model.searchQuery}"
				 enabled="{!this.model.isSearching}"
				 enter="this.model.search()" />
	
	<components:VideoList playVideo="this.model.selectVideo(event.video)"
						  addVideo="this.model.addVideo(event.video)"
						  dataProvider="{this.model.searchResults}"
						  width="100%"
						  height="100%" />
</s:Group>
